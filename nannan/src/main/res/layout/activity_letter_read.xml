<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/MasterColor2"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/MasterColor2">

            <ImageButton
                android:id="@+id/ib_quit_letter_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/vector_arrow_left" />
            <TextView
                android:id="@+id/tv_letter_read_name"
                android:layout_toRightOf="@+id/ib_quit_letter_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="喃喃"
                android:textColor="@color/MasterColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_letter_read_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="回复"
                android:textSize="18sp"
                android:textColor="@color/MasterColor"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/et_content_letter_read"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackgroundColor"
        android:gravity="top"
        android:padding="5dp"
        android:editable="false"
        android:textColor="@color/HostBlackColor3"
        android:textColorHint="@color/TextColorHint"
        android:textCursorDrawable="@drawable/color_cursor" />

</LinearLayout>