<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingBottom="10dp"
        android:background="@color/HomeCardColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nickname_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="喃喃"
                android:textColor="@color/HostBlackColor"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/iv_gender_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/tv_nickname_user"
                android:src="@drawable/vector_man" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_introduce_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:text="ta 还没有任何介绍哦~"
            android:textColor="@color/HostBlackColor"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shape_oval" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_icon_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:src="@mipmap/deer"
        app:riv_oval="true" />

</RelativeLayout>