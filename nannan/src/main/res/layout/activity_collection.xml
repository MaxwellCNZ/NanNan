<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/MasterColor2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_quit_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_arrow_left" />

        <TextView
            android:id="@+id/tv_type_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="运动"
            android:textColor="@color/HomeCardColor"
            android:textSize="18sp" />

    </LinearLayout>

    <com.nannan.nannan.view.widget.NoScrollViewPager
        android:id="@+id/vp_collection_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.nannan.nannan.view.widget.NoScrollViewPager>

</LinearLayout>