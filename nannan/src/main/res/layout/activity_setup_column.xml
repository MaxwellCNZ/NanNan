<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bar_setup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/MasterColor2">

        <ImageButton
            android:id="@+id/ib_quit_user_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_quit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ib_quit_user_edit"
            android:text="分 享 福 利"
            android:textColor="@color/HostBlackColor2"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ib_issue_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_issue" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_picture_setup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BackgroundColor"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="点击添加图片"
            android:textColor="@color/ItemCardColor"
            android:textSize="25sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_title_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_et_login"
            android:maxLines="2"
            android:padding="10dp"
            android:textColor="@color/HostBlackColor"
            android:textColorHint="@color/TextColorHint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="标题"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:hint="好东西向大家分享"
            android:padding="10dp"
            android:textColor="@color/HostBlackColor2"
            android:textColorHint="@color/TextColorHint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>