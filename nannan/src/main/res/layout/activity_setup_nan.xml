<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bar_setup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/MasterColor2">

        <ImageButton
            android:id="@+id/ib_quit_user_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_quit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ib_quit_user_edit"
            android:text="新 建"
            android:textColor="@color/HostBlackColor2"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_type_setup"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:cursorVisible="false"
            android:focusable="false"
            android:gravity="center"
            android:hint="请选择分类"
            android:textColor="@color/HostBlackColor"
            android:textColorHint="@color/TextColorWhite2"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ib_issue_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_issue" />

        <ImageButton
            android:id="@+id/ib_type_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/et_type_setup"
            android:background="@android:color/transparent"
            android:padding="3dp"
            android:src="@drawable/vector_down" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_content_setup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="top"
        android:hint="简单说两句吧 . . . "
        android:padding="5dp"
        android:textColor="@color/HostBlackColor"
        android:textColorHint="@color/TextColorHint"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_picture_setup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/BackgroundColor"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="点击添加图片"
            android:textSize="30sp"
            android:textColor="@color/ItemCardColor"/>

    </RelativeLayout>
</LinearLayout>