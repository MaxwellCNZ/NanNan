<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeCardColor"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/ItemCardColor"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_icon_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_oval_icon"
                android:src="@mipmap/deer"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_name_comment"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/riv_icon_comment"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="喃喃"
                android:textColor="@color/HostBlackColor2"
                android:textSize="16sp" />


            <ImageButton
                android:id="@+id/ib_report_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:src="@drawable/vector_report"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/tv_data_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ib_report_comment"
                android:text="日期"
                android:textColor="@color/HostBlackColor4"
                android:textSize="14sp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/HostBlackColor"
            android:textSize="18sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/ib_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/vector_reply"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_upvote_num_comment"
                    android:layout_width="wrap_content"
                    android:background="@drawable/shape_circular_rectangle"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/HomeCardColor" />

                <ImageButton
                    android:id="@+id/ib_upvote_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_upvote_normal"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:button="@null"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>