<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/MasterColor2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_quit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_arrow_left" />

        <TextView
            android:id="@+id/tv_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="评论"
            android:textColor="@color/HomeCardColor"
            android:textSize="18sp" />

    </LinearLayout>

    <com.nannan.nannan.view.widget.NoScrollViewPager
        android:id="@+id/vp_comment_viewpager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">

    </com.nannan.nannan.view.widget.NoScrollViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MasterColor2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/send_background"
            android:gravity="top"
            android:hint="评论(少于200字)"
            android:textColorHint="@color/HostBlackColor4"
            android:maxLines="3"
            android:maxLength="200"
            android:textColor="@color/HostBlackColor3"
            android:textCursorDrawable="@drawable/color_cursor" />

        <ImageButton
            android:id="@+id/ib_comment_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:src="@drawable/vector_send" />
    </LinearLayout>
</LinearLayout>