<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/MasterColor"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/ib_quit_user_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_arrow_left" />

        <TextView
            android:id="@+id/tv_type_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ib_quit_user_edit"
            android:textColor="@color/HostBlackColor2"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ib_add_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/vector_add" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv_discover_function"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="发现"
                android:background="@color/BackgroundColor3"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/HomeCardColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_mine_function"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="我的"
                android:background="@color/BackgroundColor2"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/HomeCardColor"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <com.nannan.nannan.view.widget.NoScrollViewPager
        android:id="@+id/vp_function_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.nannan.nannan.view.widget.NoScrollViewPager>

</LinearLayout>