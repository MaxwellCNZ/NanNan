<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MasterColor"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="举报"
        android:textColor="@color/HomeCardColor"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_report"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/BackgroundColor"
        android:gravity="top"
        android:hint="举报理由"
        android:padding="10dp"
        android:textColor="@color/HostBlackColor2"
        android:textColorHighlight="@color/BackgroundColor2"
        android:textColorHint="@color/TextColorHint"
        android:textCursorDrawable="@drawable/color_cursor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="确定"
            android:textColor="@color/TextColorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_no_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/TextColorWhite"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>