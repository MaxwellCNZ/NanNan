<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeCardColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="10dp"
        android:background="@color/ItemCardColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_icon_item_column"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_oval_icon"
                android:src="@mipmap/deer"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_name_item_column"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/riv_icon_item_column"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="喃喃"
                android:textColor="@color/HostBlackColor2"
                android:textSize="16sp" />


            <ImageButton
                android:id="@+id/ib_more_item_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/vector_other" />

            <TextView
                android:id="@+id/tv_data_item_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ib_more_item_column"
                android:text="日期"
                android:textColor="@color/HostBlackColor4"
                android:textSize="14sp" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自于 "
                android:textColor="@color/HostBlackColor3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_share_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喃喃"
                android:textColor="@color/MasterColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 的分享"
                android:textColor="@color/HostBlackColor3"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_column_pic"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/background_tree"
            android:background="@color/BackgroundColor2"/>
        <TextView
            android:id="@+id/tv_item_column_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="快来介绍你自己吧 : ) "
            android:textStyle="bold"
            android:textColor="@color/HostBlackColor"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>