<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PagerBackground"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:background="@color/MasterColor2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/MasterColor2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@mipmap/indicator"
            android:text="我关注的人"
            android:textColor="@color/HostBlackColor3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_right_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注我的人"
            android:textColor="@color/HostBlackColor3"
            android:textSize="18sp" />
    </LinearLayout>

    <com.nannan.nannan.view.widget.NoScrollViewPager
        android:id="@+id/vp_viewpager_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.nannan.nannan.view.widget.NoScrollViewPager>
</LinearLayout>