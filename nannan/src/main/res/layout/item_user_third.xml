<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeCardColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/BackgroundColor2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_followee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ta 关注的人"
                android:textColor="@color/HostBlackColor3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_followeeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/HostBlackColor3"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_follower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="关注 ta 的人"
                android:textColor="@color/HostBlackColor3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_followerNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/HostBlackColor3"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_follow"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@color/BackgroundColor3"
                android:text="未关注"
                android:textColor="@color/HostBlackColor3"
                android:textSize="16sp" />

            <com.nannan.nannan.view.widget.WaterWaveImageButton
                android:id="@+id/wwiv_letter"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@color/WaterBlue3"
                android:src="@drawable/vector_letter_user"
                android:textColor="@color/HostBlackColor3"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>